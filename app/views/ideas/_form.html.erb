      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class="col-md-2 col-md-offset-1"><%= f.label :name %></div>
    <div class="col-md-6"><%= f.text_field :name, :class => "form-control" %></div>
  </div>

  <div class="field row">
    <div class="col-md-2 col-md-offset-1"><%= f.label :description %></div>
    <div class="col-md-6"><%= f.text_area :description, :class => "form-control" %></div>
  </div>

  <div class="field row">
    <div class="col-md-2 col-md-offset-1"><%= f.label :picture %></div>
    <div class="col-md-6"><%= f.file_field :picture %></div>
  </div>

  <div class="actions row">
    <div class="col-md-2 col-md-offset-3"><%= f.submit :class=>"btn btn-primary" %></div>
  </div>
<% end %>
